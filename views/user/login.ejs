<div class="container">
    <form class="col-md-8 mx-auto p-4">
        <div class="form-group">
            <label for="email">Email address</label>
            <input type="email" class="form-control" id="email" placeholder="Enter email" required>
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" placeholder="Enter Password" pattern="^(?=.*[a-zA-Z])(?=.*[!@#$%^*+=-])(?=.*[0-9]).{8,16}$" required>
            <small id="emailHelp" class="form-text text-muted">This must be 8~16 digits, including text, numbers, and special characters.</small>
        </div>
        <div class="form-group">
            <label for="name">Name (NickName)</label>
            <input type="text" class="form-control" id="name" placeholder="Enter Name" required>
        </div>
        <div class="form-group">
            <label for="Address">Address</label>
            <input type="text" class="form-control" id="Address" placeholder="Enter Address" required>
        </div>
        <div class="form-group">
            <label for="Address">Phone</label>
            <div class="input-group-prepend input-group-sm col-6 p-0">
                <select type="text" class="form-control mr-2" name="" id="">
                    <option value="010">010</option>
                    <option value="011">011</option>
                    <option value="070">070</option>
                </select> - 
                <input type="text" class="form-control mr-2 ml-2" pattern="^[0-9]{3,4}$" required> - 
                <input type="text" class="form-control mr-2 ml-2" pattern="^[0-9]{3,4}$" required>
            </div>
        </div>
        <button type="submit" class="btn btn-success mt-5">Submit</button>
    </form>
</div>
