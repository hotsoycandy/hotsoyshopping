<section class="container">
    <h1 class="display-4 p-5 text-center">We sell this</h1>
    <div class="row justify-content-center">
        <div class="row col-md-11">
        <% for(var i=0; i<products.length; i++){ %>
            <% if(i%3 == 0) { %>
            <% } %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div style="width:100%;height:280px;overflow:hidden;">
                            <img class="card-img-top" src="product/<%- products[i].image_url -%>"
                            alt="Card image cap" style="position:relative;top:50%;transform : translateY(-50%);">
                        </div>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"> <%- products[i].name -%> </li>
                            <li class="list-group-item"> <%- products[i].price -%>ï¿¦ </li>
                            <li class="list-group-item">
                                <a href="/product/showProduct?product=<%- products[i].id -%>" class="card-link">BUY</a>
                                <a href="#" class="card-link">IN CART</a>
                            </li>
                        </ul>
                    </div>
                </div>
            <% if(i%3 == 2) { %>
            <% } %>
        <% } %>
        </div>
    </div>
</section>