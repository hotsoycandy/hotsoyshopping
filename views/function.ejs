<%
    money_format = function (num){
        return "￦ "+num.toString().replace(/(\d)(?=(\d\d\d)+(?!\d))/g, "$1,");
    }
    
    date_format = function(specific){
        var year  = specific.getFullYear();

        var month =
            specific.getMonth()+1 < 10 ?
            "0"+(specific.getMonth()+1) :
            (specific.getMonth()+1);

        var date =
            specific.getDate() < 10 ?
            "0"+(specific.getDate()) :
            (specific.getDate());

        var day = year+"-"+month+"-"+date;
        
        return day;
    }
%>